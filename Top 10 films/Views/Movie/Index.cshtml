<div>
    <h3>@ViewBag.Title</h3>
    <ul class="main_list_container">
        @foreach (var m in ViewBag.Movies)
        {
            <li class="main_movie_container">
                <div class="posterContainer">
                    <img src="@Url.Content(m.PosterUrl)" alt="@m.Title" />
                </div>
                <div class="MovieDataContainer">
                    <div class="movieTitleContainer">
                        @m.Title
                    </div>

                </div>
            </li>
        }
    </ul>
</div>

